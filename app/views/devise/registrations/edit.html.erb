<div class= "signup-padding container_login">

  <div class= "col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4 page-header">

    <h2>Update your account</h2>

      <div class="container">
        <div class="light-well">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form_group">
              <%= f.label :Add_a_cool_photo_of_yourself! %><br><br>
              <div class="row">
                <div class="col-sm-4">
                  <%= registration_avatar (@registration_image) %>
                </div>
                <div class="col-sm-8"> 
                  <%= f.file_field :avatar %>
                </div>
              </div>
            </div>

            <div class="form_group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Required", class: "form-control" %>
            </div>
            <br>

            <div class="form-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "name", placeholder: "Required", class: "form-control" %>
            </div>

            <div class="form-group">
            <%= f.label :handle %><br />
            <%= f.text_field :handle, autofocus: true, autocomplete: "handle", placeholder: "Required", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :about_you %><br>
              <%= f.text_area :about, autofocus: true, placeholder: "Let everyone know about you", :rows => 5, class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Update Account!", class: "btn btn-primary" %>
            </div>
            <% end %>
          </div>
        </div>
        <br>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

  <%= link_to "Back", :back %>
  </div>

</div>
